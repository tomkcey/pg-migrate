{
    "name": "@tomkcey/pg-migrate",
    "version": "0.9.0",
    "description": "A small typed library for managing PostgreSQL migrations.",
    "main": "dist/index.js",
    "bin": {
        "@tomkcey/pg-migrate": "dist/index.js"
    },
    "private": false,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tomkcey/pg-migrate.git"
    },
    "keywords": [
        "postgresql",
        "typescript",
        "migration",
        "nodejs"
    ],
    "author": "Thomas Caissie <tomkcey@gmail.com>",
    "license": "UNLICENSED",
    "bugs": {
        "url": "https://github.com/tomkcey/pg-migrate/issues"
    },
    "homepage": "https://github.com/tomkcey/pg-migrate#readme",
    "dependencies": {
        "dotenv": "^16.6.1",
        "pg": "^8.16.3",
        "sql-template-strings": "^2.2.2"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^22.17.2",
        "@types/pg": "^8.15.5",
        "jest": "^29.7.0",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    },
    "scripts": {
        "build": "tsc -d",
        "start": "node dist/index.js",
        "fmt": "prettier --write src/**/*.ts",
        "test": "jest -i",
        "ci": "pwsh -File scripts/ci.ps1",
        "ci:simple": "npm i && npm run fmt && npm run build && docker compose up -d && sleep 2 && npm run test && docker compose down",
        "clean": "rm -rf dist coverage node_modules",
        "deploy": "npm run build && npm publish --access public",
        "bump:patch": "npm version patch",
        "bump:minor": "npm version minor",
        "bump:major": "npm version major"
    }
}
