{
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "moduleResolution": "NodeNext",
        "isolatedModules": true,
        "removeComments": false,
    },
    "exclude": ["node_modules", "dist", "tmp", "migrations", "test", "src/**/*.test.ts"],
    "include": ["src", "test"]
}